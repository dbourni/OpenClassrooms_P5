{% extends 'backofficeLayout.html.twig' %}

{% block head %}
    {{ parent() }}
    <script language="javascript">
        function del(id)
        {
            if (confirm("voulez vous supprimer?"))
                location.replace("index.php?p=deletePost&post="+id);
        }
    </script>
{% endblock %}

{% block content %}
    <div class="container" id="PostsList">
        <h1><b>Liste des articles</b></h1>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Titre</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                    <tr>
                        <td width="250px">{{ post.date_post }}</td>
                        <td>{{ post.title }}</td>
                        <td width="150px">
                            <a href="index.php?p=editPost&post={{ post.id_post }}"><i class="fas fa-edit"></i></a>
                            <a href="javascript:del({{ post.id_post }})"><i class="fas fa-trash-alt"></i></a>
                            <a href="index.php?p=viewPost&post={{ post.id_post }}" target="_blank"><i class="far fa-eye"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}