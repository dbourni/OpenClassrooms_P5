{% extends 'Layout.html.twig' %}

{% block content %}
    <div class="container" id="subscription" xmlns="http://www.w3.org/1999/html">
        <h1><b>{{ header }}</b></h1>
        <form method="post" action="index.php?p=saveSubscription" enctype="multipart/form-data">
            <div class="row" id="userform">
                <div class="form-group col-sm-12">
                    <label for="name" class="h4">Nom</label>
                    <input type="text" class="form-control" name="name" id="name" value="{{ user.name }}" placeholder="Nom ou pseudo" required>
                </div>
                <div class="form-group col-sm-12">
                    <label for="email" class="h4">Email</label>
                    <input type="email" class="form-control" name="email" id="author" value="{{ user.email }}" placeholder="Adresse email" required>
                </div>
                <div class="form-group col-sm-6">
                    <label for="password" class="h4">Mot de passe</label>
                    <input type="password" class="form-control" name="password" id="password" required>
                </div>
                <div class="form-group col-sm-6">
                    <label for="password2" class="h4">Saisissez de nouveau votre mot de passe</label>
                    <input type="password" class="form-control" name="password2" id="password2" required>
                </div>
                <div class="form-group col-sm-12 d-flex justify-content-center">
                    <button type="submit" id="form-submit" class="btn btn-lg rounded border-primary">S'inscrire</button>
                </div>
                <div class="col-sm-12 d-flex justify-content-center">
                    <p>Votre inscription devra être validée par l'administrateur</p>
                </div>
            </div>
        </form>
    </div>
{% endblock %}